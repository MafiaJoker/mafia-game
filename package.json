{
  "name": "mafia-vue",
  "version": "1.0.0",
  "description": "Помощник для проведения игр в Мафию в турнирном формате",
  "author": {
    "name": "Mafia Game Helper Team",
    "email": "support@mafiagame.example.com"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "seed": "node scripts/seed.js",
    "seed:all": "node scripts/seed.js all",
    "seed:all:full": "node scripts/seed.js all full",
    "seed:all:stress": "node scripts/seed.js all stress",
    "seed:events": "node scripts/seed.js events",
    "seed:games": "node scripts/seed.js games",
    "seed:users": "node scripts/seed.js users",
    "seed:clean": "node scripts/seed.js clean",
    "seed:quick": "node scripts/seed.js quick",
    "electron": "electron .",
    "electron:serve": "cross-env NODE_ENV=development electron .",
    "electron:build": "cross-env ELECTRON=true npm run build && electron-builder",
    "electron:build:win": "cross-env ELECTRON=true npm run build && electron-builder --win",
    "electron:build:mac": "cross-env ELECTRON=true npm run build && electron-builder --mac",
    "electron:build:linux": "cross-env ELECTRON=true npm run build && electron-builder --linux",
    "electron:build:all": "cross-env ELECTRON=true npm run build && electron-builder -mwl"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "axios": "^1.6.0",
    "element-plus": "^2.8.0",
    "pinia": "^2.1.0",
    "vue": "^3.5.17",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@faker-js/faker": "^9.9.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.6",
    "cross-env": "^7.0.3",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "happy-dom": "^17.4.7",
    "unplugin-auto-import": "^0.17.0",
    "unplugin-element-plus": "^0.10.0",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.0",
    "vitest": "^3.1.4"
  }
}
